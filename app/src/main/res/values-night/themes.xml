<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode -->
    <style name="Theme.Pawmatch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/splash_background</item>
        <item name="colorPrimaryDark">@color/splash_background</item>
        <item name="colorAccent">@color/splash_background</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/splash_background</item>
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Splash screen theme for night mode -->
    <style name="SplashTheme" parent="Theme.Pawmatch">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
    </style>
</resources>