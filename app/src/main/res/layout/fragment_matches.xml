<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f0e4">

    <TextView
        android:id="@+id/matchesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matches"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold" />

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/matchesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:labelFor="@id/matchesLabel"
        android:contentDescription="Swipe through matched profiles"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/noMatchesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No matches yet. Swipe right on pets to find matches!"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp" />

</LinearLayout>