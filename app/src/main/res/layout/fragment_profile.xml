<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_owner_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Owner image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profile_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/splash_background"
        app:layout_constraintTop_toBottomOf="@id/profile_owner_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/profile_owner_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: Unknown"
        android:textSize="18sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/profile_owner_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/profile_pet_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Pet image"
        app:layout_constraintTop_toBottomOf="@id/profile_owner_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/profile_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/splash_background"
        app:layout_constraintTop_toBottomOf="@id/profile_pet_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/profile_pet_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age, Breed"
        android:textSize="18sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/profile_pet_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/edit_owner_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit Owner Profile"
        app:layout_constraintTop_toTopOf="@id/profile_owner_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/edit_pet_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit Pet Profile"
        app:layout_constraintTop_toTopOf="@id/profile_pet_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/splash_background"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>