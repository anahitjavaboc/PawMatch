<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Match toolbar color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Unselected state -->
    <item>
        <shape>
            <solid android:color="#808080" /> <!-- Gray for unselected state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>